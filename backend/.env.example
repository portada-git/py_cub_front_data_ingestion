# PortAda Configuration
PORTADA_BASE_PATH=/path/to/your/data/lake
PORTADA_APP_NAME=PortAdaAPI
PORTADA_PROJECT_NAME=portada_ingestion
INGESTION_FOLDER=/tmp/portada_ingestion

# FastAPI Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration (Simple SQLite by default)
DB_DATABASE_URL=sqlite+aiosqlite:///path/to/portada.db
DB_DATABASE_ECHO=false
DB_SESSION_DURATION_DAYS=30
DB_SESSION_CLEANUP_INTERVAL_HOURS=24

# Storage Configuration
STORAGE_STORAGE_BASE_PATH=/path/to/storage
STORAGE_INGESTION_STORAGE_PATH=/path/to/storage/ingestion
STORAGE_MAX_FILE_SIZE_MB=100
STORAGE_MIN_FREE_SPACE_MB=100
STORAGE_CLEANUP_TEMP_FILES_HOURS=24

# Logging
LOG_LEVEL=INFO